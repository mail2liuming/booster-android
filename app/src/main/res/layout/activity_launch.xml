<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pie_au"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/launch_logo_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <ImageView
            android:id="@+id/launch_logo"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:src="@drawable/booster_logo" />

        <TextView
            style="@style/AppTheme.Widget.TextView.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/launch_logo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/app_name" />



    </RelativeLayout>


    <TextView
        style="@style/AppTheme.Widget.TextView.Header"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/launch_logo_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:text="@string/welcome" />

</RelativeLayout>